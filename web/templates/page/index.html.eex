<style>
.custom-height {
    height: 300px;
}
textarea {
   resize: none !important;
}
.input {
    border: 2px 2px;
}
</style>

<script type="text/javscript">
    $('select.dropdown').dropdown();
</script>

<div class="ui container">
    <br />
    <form action="/state/push" method="POST" enctype='application/json'>
        <div class="ui grid">
            <div class="sixteen wide column">
                <div class="ui fluid labeled input">
                    <div class="ui label">
                        Application
                    </div>
                    <input name="app" />
                </div>
            </div>
            <div class="sixteen wide column">
                <div class="ui fluid labeled input">
                    <div class="ui label">
                        Method
                    </div>
                    <input name="method" />
                </div>
            </div>
            <div class="sixteen wide column">
                <div class="ui fluid labeled input">
                    <div class="ui label">
                        Path
                    </div>
                    <input name="path" class="c-form-input u-width-1/1" />
                </div>
            </div>
            <div class="sixteen wide column">
                <div class="ui form">
                    <label>JSON Data</label>
                    <div class="field">
                        <textarea name="json" class="c-form-input u-width-1/1 custom-height"></textarea>
                    </div>
                </div>
            </div>
            <div class="sixteen wide column">
                <input type="submit" value="Create Application" class="positive ui button" />
            </div>
        </div>
    </form>
    <div class="ui grid">
        <div class="column">
            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>Application</th>
                        <th>Path</th>
                        <th>Method</th>
                        <th>Mock URI</th>
                    </tr>
                </thead>
                <tbody>
                <%= for app <- @apps do %>
                    <tr>
                        <td><%= app["name"] %></td>
                        <td><%= app["path"] %></td>
                        <td><%= app["method"] %></td>
                        <td><a href="<%= app["uri"] %>"><%= app["uri"] %></a></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
